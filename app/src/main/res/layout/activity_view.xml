<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:background="@android:color/white">

        <fragment class="com.example.myapplication.RecyclerViewFragment"
            android:id="@+id/recycler_view_activity"
            android:layout_width="match_parent" android:layout_height="0dp"  android:layout_weight="50" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:id="@+id/map_container">

            <fragment class="com.example.myapplication.MapsActivity"
                android:id="@+id/maps_activity"
                android:layout_width="match_parent" android:layout_height="match_parent" />

        </RelativeLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>